<hgroup class="error_message"><h2>That game is already on loan</h2>
<h3>Please suggest another</h3></hgroup>
<form class="create_new" action="/loans" method="post">
<label for="game_id">Game:</label>
<select name="game_id" id="game_select">
    <% @games.each do |game| %>
      <option value=<%= game.id %>><%= game.name%></option>
    <% end %>
  </select>

<label for="customer_id">Name:</label>
<select name="customer_id" id="customer_select">
  <% @customers.each do |customer| %>
    <option value=<%= customer.id %>><%= customer.name%></option>
  <%end  %>
</select>
<br />
  <input type="submit" value="Create Loan" />
</form>
