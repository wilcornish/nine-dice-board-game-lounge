<form class="edit" action="/games" method="post">

  <label for="name">Name:</label>
  <input id="Name" type="text" name="name" value="" />
  <br />
  <label for="owner">Owner:</label>
  <input id="owner" type="text" name="owner" value=""/>
  <br />
  <label for="genre_id">Genre:</label>
  <select name="game_id" id="game_id">
      <% @genres.each do |genre| %>
        <option value=<%= genre.id %>><%= genre.genre%></option>
      <% end %>
    </select>
  <br />
  <label for="player_count">Player Count:</label>
  <input id="player_count" style="width:4ch" type="number" name="player_count" value=""/>

  <label for="play_time_id">Play Time:</label>
  <select name="play_time_id" id="play_time_id">
      <% @play_times.each do |play_time| %>
        <option value=<%= play_time.id %>><%= play_time.play_time%></option>
      <% end %>
    </select>
  <br />
  <input type="submit" value="Add Game" />

</form>
